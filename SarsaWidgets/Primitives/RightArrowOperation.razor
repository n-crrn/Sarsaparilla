@*
 * Primitive visual element that displays an arrow to the right, used for rule display.
 *@
@using StatefulHorn

<div class='outer'>
    @if (Left != null)
    {
        <div class='left'>@Left</div>
    }
    <svg class='expanded' height='20px'>
        <line x1='0%' y1='50%' x2='100%' y2='50%'/>
    </svg>
    <svg class='arrow-head' width='20px' height='20px'>
        <line x1='0%' y1='50%' x2='95%' y2='50%'/>
        <line x1='95%' y1='50%' x2='5%' y2='5%'/>
        <line x1='95%' y1='50%' x2='5%' y2='95%'/>
    </svg>
    @if (Right != null)
    {
        <div class='right'>@Right</div>
    }
</div>

@code {

    [Parameter]
    public RenderFragment? Left { get; set; }

    [Parameter]
    public RenderFragment? Right { get; set; }

}
